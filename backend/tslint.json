{
  "extends": "tslint:recommended",
  "rules": {
    "max-line-length": {
      "options": [120]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": true,
    "no-empty-interface": false,
    "no-unused-expression": true,
    "no-async-without-await": true,
    "no-unused-variable": true
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  }
}
